---
import App from '../App.tsx';
import Layout from '../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { path: undefined }, props: { title: 'Laina – DeFi made simple.' } },
    { params: { path: 'laina' }, props: { title: 'Laina – DeFi made simple.' } },
    { params: { path: 'lend' }, props: { title: 'Laina – Lend assets' } },
    { params: { path: 'borrow' }, props: { title: 'Laina – Borrow assets' } },
  ];
}

const description = 'A trustless loan platform focusing on single-token lending pools. DeFi made simple.';

const { title } = Astro.props;
---

<Layout title={title} description={description}>
  <App client:only />
</Layout>
